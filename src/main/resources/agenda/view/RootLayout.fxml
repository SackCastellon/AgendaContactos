<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import org.controlsfx.control.StatusBar?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="agenda.view.RootLayout">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu text="%menu.file">
                <MenuItem onAction="#handleExport" text="%menu.file.export"/>
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem onAction="#handleQuit" text="%menu.file.quit"/>
            </Menu>
            <Menu fx:id="menuEdit" text="%menu.edit"/>
            <Menu text="%menu.help">
                <MenuItem text="%menu.help.about"/>
            </Menu>
        </MenuBar>
    </top>
    <bottom>
        <StatusBar prefHeight="20.0" BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
