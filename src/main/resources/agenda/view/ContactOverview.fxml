<?xml version="1.0" encoding="UTF-8"?>

<!--suppress JavaFxUnresolvedFxIdReference -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agenda.view.ContactOverview">
    <center>
        <SplitPane dividerPositions="0.5" BorderPane.alignment="CENTER">
            <BorderPane>
                <center>
                    <TableView fx:id="contactsTable">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </center>
                <bottom>
                    <ButtonBar BorderPane.alignment="CENTER">
                        <buttons>
                            <Button fx:id="groups" text="_Groups..." ButtonBar.buttonData="LEFT" />
                            <Button fx:id="newContact" text="_New..." ButtonBar.buttonData="RIGHT" />
                        </buttons>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </ButtonBar>
                </bottom>
            </BorderPane>
            <BorderPane>
                <center>
                    <ScrollPane fitToWidth="true" vbarPolicy="ALWAYS">
                        <VBox fx:id="contactDetails" alignment="TOP_CENTER" spacing="10.0">
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                        </VBox>
                    </ScrollPane>
                </center>
                <bottom>
                    <ButtonBar BorderPane.alignment="CENTER">
                        <buttons>
                            <Button fx:id="editContact" text="_Edit..." />
                            <Button fx:id="deleteContact" text="_Delete" />
                        </buttons>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </ButtonBar>
                </bottom>
            </BorderPane>
        </SplitPane>
    </center>
    <top>
        <HBox alignment="CENTER" spacing="10.0">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
            </padding>
            <Label fx:id="searchLabel" text="Search:" />
            <TextField fx:id="searchBox" prefColumnCount="20" />
        </HBox>
    </top>
</BorderPane>
